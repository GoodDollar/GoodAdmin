{
  "name": "gooddashboard-server",
  "version": "0.1.0",
  "dependencies": {
    "@gooddollar/goodcontracts": "^1.0.0-beta.17",
    "@types/cors": "^2.8.6",
    "@types/hdkey": "^0.7.1",
    "@types/lodash": "^4.14.144",
    "@types/mongoose": "^5.5.23",
    "@types/pino": "^5.8.12",
    "bip39-light": "^1.0.7",
    "body-parser": "^1.19.0",
    "convict": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status": "^1.4.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.6",
    "pino": "^5.13.5",
    "web3": "^2.0.0-alpha.1",
    "web3-providers": "^2.0.0-alpha.1",
    "websocket": "^1.0.30"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/eslint": "^6.1.2",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.19",
    "@types/node": "^12.11.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "concurrently": "^5.0.0",
    "env-cmd": "^10.0.1",
    "eslint": "^6.5.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "start": "npm run watch",
    "start:server": "node dist/index.js",
    "start:node": "npm run build && npm run serve",
    "build": "npm run build:ts",
    "test": "jest --forceExit --coverage --verbose",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "serve": "env-cmd node dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:node": "env-cmd nodemon dist/index.js",
    "watch:ts": "tsc -w",
    "build:ts": "tsc",
    "debug": "npm run build && npm run debug:watch",
    "debug:serve": "env-cmd nodemon --inspect dist/index.js",
    "debug:watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run debug:serve\""
  },
  "engines": {
    "node": ">=10.0"
  }
}
